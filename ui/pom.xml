<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>parent</artifactId>
    <groupId>org.jboss.pnc</groupId>
    <version>0.5</version>
  </parent>

  <artifactId>ui</artifactId>
  <packaging>jar</packaging>

  <properties>
    <grunt.build.arguments>dist</grunt.build.arguments>
  </properties>

  <build>

    <resources>
      <resource>
        <directory>dist/</directory>
        <targetPath>META-INF/resources/</targetPath>
      </resource>
    </resources>
    <plugins>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-html-version</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>prepare-package</phase>
            <configuration>
              <target>
                <replace file="${project.build.outputDirectory}/META-INF/resources/common/templates/footer.tmpl.html" token="@project.version@" value="${project.version}" />
                <replace file="${project.build.outputDirectory}/META-INF/resources/common/templates/footer.tmpl.html" token="@datetime@" value="${datetime}" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Download node.js and related modules to install 3rd party frontend libraries -->
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>0.0.23</version>

        <configuration>
          <workingDirectory>./</workingDirectory>
        </configuration>

        <executions>
          <execution>
            <id>install node and npm</id>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <nodeVersion>v0.10.31</nodeVersion>
              <npmVersion>2.2.0</npmVersion>
            </configuration>
          </execution>

          <execution>
            <id>npm install</id>
            <goals>
              <goal>npm</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <arguments>install</arguments>
            </configuration>
          </execution>

          <execution>
            <id>grunt build</id>
            <goals>
              <goal>grunt</goal>
            </goals>
            <phase>generate-resources</phase>

            <configuration>
              <arguments>${grunt.build.arguments}</arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>./</directory>
              <includes>
                <include>dist/**</include>
                <include>.tmp/**</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <!--
          Clears all cached Node/NPM/Bower artifacts makes completely fresh build

          usage: mvn clean install -Dfrontend.clean.force
      -->
      <id>frontend-forced-clean</id>
      <activation>
        <property>
          <name>frontend.clean.force</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-clean-plugin</artifactId>
            <version>2.5</version>
            <configuration>
              <filesets>
                <fileset>
                  <directory>./</directory>
                  <includes>
                    <include>dist/**</include>
                    <include>.tmp/**</include>
                    <include>node/**</include>
                    <include>node_modules/**</include>
                    <include>bower_components/**</include>
                    <include>.build-tmp/**</include>
                  </includes>
                  <followSymlinks>false</followSymlinks>
                </fileset>
              </filesets>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>auth</id>
      <activation>
        <property>
          <name>auth</name>
          <value>true</value>
        </property>
      </activation>
      <properties>
        <grunt.build.arguments>dist --enable-auth=true</grunt.build.arguments>
      </properties>
    </profile>
  </profiles>
</project>
